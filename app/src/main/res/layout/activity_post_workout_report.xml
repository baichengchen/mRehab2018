<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.matt2929.strokeappdec2017.Activity.PostWorkoutReportActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:background="@color/colorMaroon"
        android:gravity="center"
        android:text="Great Job! Here's how you did"
        android:textColor="@color/colorBackground"
        android:textSize="18sp" />

    <view
        android:id="@+id/repsView"
        class="com.example.matt2929.strokeappdec2017.WorkoutsView.GradeView"
        layout_width="match_parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="2.58" />

    <view
        android:id="@+id/timeView"
        class="com.example.matt2929.strokeappdec2017.WorkoutsView.GradeView"
        layout_width="match_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="2.58" />

    <view
        android:id="@+id/scoreView"
        class="com.example.matt2929.strokeappdec2017.WorkoutsView.GradeView"
        id="@+id/view"
        layout_width="match_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="2.58" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape_grey"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/home" />


        <Button
            android:id="@+id/continueButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape_dkblue"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/colorBackground"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>
