<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context="com.example.matt2929.strokeappdec2017.Activity.PostWorkoutReportActivity">


    <view
        android:id="@+id/repsView"
        class="com.example.matt2929.strokeappdec2017.WorkoutsView.GradeView"
        layout_width="match_parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1" />

    <view
        android:id="@+id/timeView"
        class="com.example.matt2929.strokeappdec2017.WorkoutsView.GradeView"
        layout_width="match_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1" />

    <view
        android:id="@+id/scoreView"
        class="com.example.matt2929.strokeappdec2017.WorkoutsView.GradeView"
        id="@+id/view"
        layout_width="match_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/postWorkoutHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/home" />

        <Button
            android:id="@+id/postWorkoutNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="Next\nActivity"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>
